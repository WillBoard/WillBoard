@using Microsoft.AspNetCore.Routing
@using WillBoard.Application.Administration.Commands.BoardIpDeletePosts
@using WillBoard.Application.Administration.Queries.BoardIpDeletePosts
@using WillBoard.Core.Managers
@using WillBoard.Core.Utilities
@using WillBoard.Web.Services
@using WillBoard.Core.Extensions
@inject LinkGenerator _linkGenerator
@inject ViewService _viewService
@inject AccountManager _accountManager
@model BoardIpDeletePostsViewModel
@{
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
}

<main>
    <article>
        <header>Board - Ip - Delete Posts</header>
        <section>
            <form method="post">
                <input type="hidden" name="csrf" value="@ViewData["csrf"]" autocomplete="off">
                <input type="hidden" name="@nameof(BoardIpDeletePostsCommand.BoardId)" value="@Model.BoardId" autocomplete="off">
                <input type="hidden" name="@nameof(BoardIpDeletePostsCommand.IpVersion)" value="@Model.IpVersion" autocomplete="off">
                <input type="hidden" name="@nameof(BoardIpDeletePostsCommand.IpNumber)" value="@Model.IpNumber" autocomplete="off">
                <p>
                    <button type="submit">Delete @Model.BoardId/@IpConversion.IpNumberToIpAddressString(Model.IpVersion, Model.IpNumber) posts</button>
                </p>
            </form>
        </section>
    </article>
</main>